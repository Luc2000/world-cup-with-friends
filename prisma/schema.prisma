generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_URL")
}

model Game {
  id        Int         @id @default(autoincrement())
  homeTeam  String
  awayTeam  String
  location  String
  time      String
  GameUsers GameUsers[]

  @@map("game")
}

model GameUsers {
  id        Int    @id @default(autoincrement())
  gameId    Int
  userMail  String
  userPhoto String
  userName  String
  game      Game   @relation(fields: [gameId], references: [id])
}
